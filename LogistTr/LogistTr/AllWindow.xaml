<Window x:Class="LogistTr.AllWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LogistTr"
        mc:Ignorable="d"
        Title="AllWindow" Height="800" Width="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="«ЛогистТранс»" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       VerticalAlignment="Center"
                       Margin="10,0,0,0" />

            <Button Content="Выйти" 
                    Grid.Column="1"
                    BorderThickness="0"
                    Background="Transparent"
                    Width="84" 
                    Height="40" 
                    Foreground="Black" 
                    FontSize="14" 
                    FontWeight="Bold"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Click="Button_Click" />
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <ListBox x:Name="ControlPanel" Grid.Column="0">
                
                
            </ListBox>

            <Frame Name="MainContentFrame" Grid.Column="1" NavigationUIVisibility="Hidden" />
        </Grid>
    </Grid>
</Window>
