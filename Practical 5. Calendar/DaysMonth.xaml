<UserControl x:Class="Practical_5._Calendar.DaysMonth"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Practical_5._Calendar"
             mc:Ignorable="d" Background="#eeeeee" Height="65" Width="65">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Grid.Style>
            <Style TargetType="{x:Type Grid}">
                <Setter Property="Background" Value="#eeeeee"/>
                <Style.Triggers>
                    <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource Self}}" Value="True">
                        <Setter Property="Background" Value="#f5b6da"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Grid.Style>

        <TextBlock x:Name="Date_TXT" Text="{Binding Day}" Foreground="#FF1A2126" FontSize="20" HorizontalAlignment="Center"/>
        <Image x:Name="Icon_Image" Source="{Binding IconSource}" Grid.Row="1" HorizontalAlignment="Center" Width="50" Height="50"/>
    </Grid>
</UserControl>
